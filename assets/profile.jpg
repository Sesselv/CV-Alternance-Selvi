  <circle cx="200" cy="120" r="45" fill="url(#profileGradient)"/>
  <circle cx="200" cy="110" r="15" fill="rgba(255,255,255,0.9)"/>
  <path d="M 175 135 Q 200 150 225 135" stroke="rgba(255,255,255,0.9)" stroke-width="3" fill="none"/>
  
  <!-- Texte -->
  <text x="200" y="190" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="16" font-weight="600">Photo de Profil</text>
  <text x="200" y="210" text-anchor="middle" fill="rgba(255,255,255,0.7)" font-family="Arial, sans-serif" font-size="12">400 x 300px</text>
  
  <!-- Bordure -->
  <rect x="2" y="2" width="396" height="296" fill="none" stroke="rgba(255,255,255,0.2)" stroke-width="1" rx="15"/>
